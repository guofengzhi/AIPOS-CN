	<select id="selectMerchantList" parameterType="com.jiewen.modules.entity.Merchant" resultMap="MerTermResultMap">
			 SELECT
			  m.id,
			  m.mer_id,
			  m.mer_name,
			  so.name orgName,
			  m.org_id,
			  m.link_man,
			  m.link_phone,
			  m.address,
			  m.reverse1,
			  m.reverse2,
			  m.reverse3,
			  m.reverse4,
			  m.reverse5,
			  COUNT(di.device_sn) countTerm
			FROM
			 t_merchant m
				  JOIN sys_office so
				    ON so.id = m.org_id
				  LEFT JOIN t_device_info di
				    ON m.mer_id = di.mer_id
				    AND di.device_bund_state = '1'
			WHERE 1=1
				<if test="orgId != null and orgId != ''">
					and m.org_id IN (SELECT id FROM sys_office WHERE parent_ids LIKE
					<if test="dbName == 'oracle'">'%,'||#{orgId}||',%'</if>
					<if test="dbName == 'mssql'">'%,'+#{orgId}+',%'</if>
					<if test="dbName == 'mysql'">CONCAT('%,', #{orgId}, ',%')</if>
					AND del_flag = '0'
					    UNION select id from sys_office where id = #{orgId}
				    AND del_flag = '0')
				</if>
			    <if test="merId != null and merId != ''">
					and m.mer_id=#{merId,jdbcType=VARCHAR}
				</if>
			    GROUP BY m.mer_id
	</select>
	
	<select id="getAllMerchant" parameterType="com.jiewen.modules.entity.Merchant" resultMap="baseResultMap">
		select 
			m.id,
			m.mer_id,
			m.mer_name,
			m.org_id,
			m.link_man,
			m.link_phone,
			m.address,
			m.longitude,
			m.latitude,
			m.radius,
			m.reverse1,
			m.reverse2,
			m.reverse3,
			m.reverse4,
			m.reverse5
			from t_merchant m 
			join sys_office so on so.id = m.org_id
			where 1 = 1
		<if test="id != null and id != ''">
			and m.id=#{id,jdbcType=VARCHAR}
		</if>
		<if test="merId != null and merId != ''">
			and m.mer_id=#{merId,jdbcType=VARCHAR}
		</if>
		<if test="orgId != null and orgId != ''">
			and m.org_id=#{orgId,jdbcType=VARCHAR}
		</if>
	</select>
	
